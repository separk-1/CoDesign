{
  "version": 2,
  "builds": [{ "src": "app.py", "use": "@vercel/python" }],
  "routes": [
    { "src": "^/ping$", "dest": "app.py" },
    { "src": "^/api/calculate/?$", "dest": "app.py" },
    { "src": "^/(index\\.html)?$", "dest": "app.py" },
    { "src": "^/api($|/.*)", "dest": "api/index.py" },
    { "src": "^/static/(.*)$", "dest": "/static/$1" },
    { "src": "^/(favicon\\.ico|robots\\.txt)$", "dest": "/$1" },
    { "src": "^/$", "dest": "/index.html" }
  ]
}
